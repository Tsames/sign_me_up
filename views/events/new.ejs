<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/navbar.ejs") %>
      <main>
        <div class="form-group">
          <form action="/events" method="post">
            <fieldset>
              <legend>Create a New Event</legend>
              <div>
                <h3>What</h3>
                <label>
                  Event Name:<input type="text" name="name" placeholder="name of your event" />
                </label>
                <label>
                  Description:<input type="text" name="description" placeholder="Describe your event!" />
                </label>
                <label>
                  Image:<input type="img" name="image"/>
                </label>
              </div>
              <div>
                <h3>When</h3>
                <label>
                  Date:<input type="date" name="date"/>
                </label>
                <label>
                  Time:<br><input type="time" name="time"/>
                </label>
              </div>
              <div>
                <h3>Where</h3>
                <label>
                  ADDRESS:<input type="text" name="address"/>
                </label>
                <label>
                  CITY:<input type="text" name="city"/>
                </label>
                <label>
                  STATE:<input type="text" name="state"/>
                </label>
                <label>
                  ZIP:<input type="number" name="zip"/>
                </label>
              </div>
              <input type="hidden" name="attendees" value="" />
              <input type="hidden" name="organizer" value="" />
            </fieldset>
            <input type="submit" value="Create Event" />
          </form>
        </div>
      </main>
  </body>

</html>