<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/navbar.ejs") %>

    <div class="card-container">
      <% for (event of events) { %>
        <div class="panel panel-info">
          <a href="/events/<%= event._id %>"><div class="panel-heading"><%= event.name %></div></a>
          <div class="panel-body"><a href="/events/<%= event._id %>"><img src="<%= event.image %>" class="img-responsive" alt="Image"></a></div>
          <div class="panel-footer">
            <%= event.date.toDateString() %><br>
            <%= event.address %><br>
            <%= event.city %>, <%=event.state %>
          </div>
        </div>
      <% } %>
    </div>

    <footer class="container-fluid text-center">
      <div class="footer"></div>
    </footer>
  </body>
</html>